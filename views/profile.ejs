            url: "/api/user/decode",
            method: "GET",
            headers: {
                "Authorization": user
            },
        }).then((res) => {
            const data = res.data.data
            document.getElementById('user_name').innerHTML = data.NAME
            document.getElementById('user_email').innerHTML = data.EMAIL
